<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AnaSayfaActivity"
    tools:showIn="@layout/app_bar_ana_sayfa"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="50dp">


    <Button
        android:id="@+id/gida"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Gıda"
        android:background="@drawable/food"
        android:textColor="#2196F3"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/temizlik"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Temizlik"
        android:background="@drawable/cleaning"
android:layout_marginTop="20dp"
        android:textColor="#2196F3"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/kozmetik"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Kozmetik"
        android:background="@drawable/makeup"
        android:textColor="#2196F3"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/diger"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Diğer"
        android:background="@drawable/others"
        android:textColor="#2196F3"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/bizeulasin"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Bize Ulaşın"
        android:background="@drawable/contact"
        android:textColor="#2196F3"
        android:textSize="20sp"/>


    </LinearLayout>
    </ScrollView>
